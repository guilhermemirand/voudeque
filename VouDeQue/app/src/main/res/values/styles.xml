<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppThemeWithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar.Solid.Example" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_example</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_example</item>
    </style>

    <style name="MyActionBar"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/ab_stacked_solid_example</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/ab_stacked_solid_example</item>
    </style>

</resources>
